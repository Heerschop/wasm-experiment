{
  "scripts": {
    "serve": [
      "clean",
      "copy:wasms",
      "build:ui",
      [
        "build:ui --watch",
        "wds --node-resolve --open --watch"
      ]
    ],
    "build:ui": [
      "src",
      "tsc $1"
    ],
    "copy:wasms": [
      "cpy --flat --rename=assembly-script.wasm '../assembly-script/build/release.wasm'                       './src/examples'",
      "cpy --flat                               '../dotnet/bin/Debug/Release/net7.0/browser-wasm/dotnet.wasm' './src/examples'",
      "cpy --flat --rename=emscripten-c.wasm    '../emscripten-c/hello.wasm'                                  './src/examples'",
      "cpy --flat --rename=rust.wasm            '../rust/pkg/hello_wasm_bg.wasm'                              './src/examples'"
    ],
    "clean": [
      "rm -rf ./src/*.js",
      "rm -rf ./src/examples/*.wasm"
    ],
    "lint:check": "eslint",
    "lint:write": "eslint --fix",
    "pretty:check": [
      "prettier --check ."
    ],
    "pretty:write": [
      "prettier --write ."
    ]
  }
}
